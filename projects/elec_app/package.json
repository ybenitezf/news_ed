{
  "name": "elec_app",
  "version": "1.0.0",
  "description": "A news redactor app",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "package": "electron-builder --publish=never",
    "dist": "electron-builder --dir"
  },
  "build": {
    "appId": "com.ybenitezf.newsed",
    "productName": "NewsEd",
    "asar": false,
    "asarUnpack": [
      "**/*.node"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "extraResources": [
      {
        "from": "papp/",
        "to": "papp/"
      }
    ]
  },
  "author": "Yoel Benitez Fonseca",
  "license": "MIT",
  "devDependencies": {
    "electron": "^34.0.1",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "electron-log": "^5.3.0"
  }
}
